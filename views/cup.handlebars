
    <!-- add cards -->
    
    {{#if cups.length}}
    <div id ='user-cups'>
        {{#each cups as |Cup|}}
        <div class="mug-cards">
            <div class="mug">
                {{!-- <div class="mug-img"> --}}
                <img src="/images/{{Cup.filename}}">
                {{!-- </div> --}}
                <div class="mug-info">
                    <h3 class="header">{{Cup.name}}</h3>
                    <p>{{Launch.launchDate}}</p>
                    {{!-- saw there is no price created for cups on backend --}}
                    <span class="price">$price</span>
                    
                </div>
            
                <div class="mug-body">
                    <a href="#" class="username"> {{User.username}} </a>
                    <p class="mug-desc">{{Cup.type}}
                    </p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
{{/if}}