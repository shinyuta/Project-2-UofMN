
    <!-- user card -->
    <div class="user-container">
        <div class="profile">
            <ion-icon name="settings-outline" class="settings"></ion-icon>            
            <ion-icon name="menu-outline" class ="menu"></ion-icon>
            <img src="../images/profilepicture.png" class="profile-picture">
            <h3 class ="name" >{{ userData.username }}</h3>
            <p class="user-desc">Selling and Buying Cups!</p>
            <div class="social-media">
                <ion-icon name="logo-instagram" class="instagram"></ion-icon>
                <ion-icon name="logo-facebook" class="facebook"></ion-icon>
                <ion-icon name="logo-discord" class="discord"></ion-icon>
            </div>
            <button type="button" class="followBtn">Follow</button>
            <div class="profile-bottom">
                <p><a href="#user-cups">Current Cups!</a></p>
                <ion-icon name="arrow-down-outline" class="arrow-down"></ion-icon>
            </div>
        </div>
    </div>

    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>

    <!-- add cards -->
    {{#if cups.length}}
    <div id ='user-cups'>
        {{#each cups as |cup|}}
        <div class="mug-cards">
            <div class="mug">
                <img src="https://imgs.search.brave.com/QIfbxrGs2D-p3_R1EfnfOuyz9rMgtqJs396WCx360c8/rs:fit:860:0:0/g:ce/aHR0cHM6Ly9tLm1l/ZGlhLWFtYXpvbi5j/b20vaW1hZ2VzL0kv/NjFBcld1bi1xdUwu/anBn"
                    alt="image">
            
                <div class="mug-info">
                    <h3 class="header">{{cupdata.name}}</h3>
                    {{!-- saw there is no price created for cups on backend --}}
                    <span class="price">$price</span>
                </div>
            
                <div class="mug-body">
                    <a href="#" class="username"> {{userData.username}} </a>
                    <p class="mug-desc">{{cupdata.type}}
                    </p>
                </div>
        </div>
    </div>
    <!-- icons -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <!-- buttons, navbar, header. -->
    <script src="../public/js/app.js"></script>

</body>

</html>